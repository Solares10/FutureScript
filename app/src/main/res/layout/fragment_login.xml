<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/fs_pink_bg">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical" android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- hourglass image placeholder -->
        <TextView
            android:text="â³"
            android:textSize="48sp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <TextView
            android:text="Future Script"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textColor="@color/fs_text"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView
            android:text="SIGN IN"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/fs_text"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:startIconDrawable="@android:drawable/ic_menu_edit">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:startIconDrawable="@android:drawable/ic_lock_lock">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/loginBtn"
            android:text="LOG IN"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_width="match_parent" android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/fs_accent"
            android:textColor="@color/fs_text"/>

        <TextView
            android:id="@+id/goToSignup"
            android:text="DON'T HAVE AN ACCOUNT?\nSIGN UP"
            android:gravity="center"
            android:textColor="@color/fs_text"
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
