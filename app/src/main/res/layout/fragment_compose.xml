<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDD5D9"
    android:padding="24dp">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#F2BBC4"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Button -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="BACK"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="@font/noticiatext_bold"
            android:background="@drawable/back_button_border"
            android:paddingStart="24dp"
            android:paddingEnd="24dp" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_future_script"
            android:scaleType="fitEnd"
            android:adjustViewBounds="true" />

    </LinearLayout>

    <!-- Letter Input Field -->
    <EditText
        android:id="@+id/messageField"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Write your letter here..."
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:fontFamily="@font/noticiatext_regular"
        android:gravity="top|start"
        android:padding="16dp"
        android:background="@drawable/letter_input_background"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dateLabel"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp" />

    <!-- Date Label -->
    <TextView
        android:id="@+id/dateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your send date:"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/noticiatext_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dateField"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="12dp" />

    <!-- Date Field -->
    <EditText
        android:id="@+id/dateField"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:hint="DD-MM-YYYY"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:fontFamily="@font/noticiatext_regular"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/date_input_background"
        android:inputType="date"
        android:focusable="false"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sendBtn"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp" />

    <!-- Send Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/sendBtn"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="SEND"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:fontFamily="@font/noticiatext_bold"
        android:background="@drawable/send_button_background"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
