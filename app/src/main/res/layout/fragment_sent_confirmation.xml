<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:gravity="center"
    android:padding="24dp" android:background="@color/fs_pink_bg"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Your letter is on the way! Go back to write more."
        android:gravity="center" android:textColor="@color/fs_ink"
        android:textSize="18sp" android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/homeBtn" android:text="HOME PAGE"
        android:layout_marginTop="24dp" android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
