<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_sent_confirmation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECD9DC"
    tools:context=".SentConfirmationFragment">

    <!-- Winged Envelope Image -->
    <ImageView
        android:id="@+id/image_wings"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/envelope_with_wings"
        android:src="@drawable/icon_wings"
        app:layout_constraintBottom_toTopOf="@+id/text_confirmation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <!-- Confirmation Text -->

    <!-- Home Page Button Image -->

    <TextView
        android:id="@+id/text_confirmation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/noticiatext_bold"
        android:text="Your letter is on the way!\nGo back to the home page\nto write more."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_wings" />

    <ImageButton
        
        android:id="@+id/homeBtn"
        android:layout_width="226dp"
        android:layout_height="64dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/icon_homepagebutton"
        android:background="@android:color/transparent"
        android:contentDescription="@string/home_page_button"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/text_confirmation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
