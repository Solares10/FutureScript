<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECD9DC">

    <!-- ðŸª½ Envelope with wings image -->
    <ImageView
        android:id="@+id/wingedEnvelopeImage"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:src="@drawable/icon_wings"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Flying envelope icon" />

    <!-- âœ‰ï¸ Confirmation message -->
    <TextView
        android:id="@+id/sentMessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your letter is on the way!\nGo back to the letters page to write more."
        android:textAlignment="center"
        android:textColor="#5A4A4A"
        android:textSize="20sp"
        android:fontFamily="@font/noticiatext_regular"
        app:layout_constraintTop_toBottomOf="@id/wingedEnvelopeImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- ðŸ’— Back to Letters Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/backToLettersButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK TO LETTERS"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:fontFamily="@font/noticiatext_bold"
        android:textColor="#FFFFFF"
        app:cornerRadius="25dp"
        app:backgroundTint="#F2BBC4"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/sentMessageText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
