<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4D9E1"
    tools:context=".ui.confirm.SentConfirmationFragment">

    <!-- Winged Mail Image -->
    <ImageView
        android:id="@+id/heartImage"
        android:layout_width="280dp"
        android:layout_height="220dp"
        android:src="@drawable/icon_wings"
        android:contentDescription="@string/letter_sent_image"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_margin="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Confirmation Message -->
    <TextView
        android:id="@+id/confirmationText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Your letter is on the way!\nGo back to the home page to write more."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:fontFamily="@font/poppins_semibold"
        android:lineSpacingExtra="8dp"
        app:layout_constraintTop_toBottomOf="@id/heartImage"
        app:layout_constraintTop_margin="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Home Page Button Background -->
    <ImageView
        android:id="@+id/homeBtnBackground"
        android:layout_width="226dp"
        android:layout_height="64dp"
        android:src="@drawable/icon_homepagebutton"
        android:contentDescription="@string/home_page_button"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/confirmationText"
        app:layout_constraintTop_margin="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- White HOME PAGE text centered over the button -->
    <TextView
        android:id="@+id/homeBtnText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME PAGE"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toTopOf="@id/homeBtnBackground"
        app:layout_constraintBottom_toBottomOf="@id/homeBtnBackground"
        app:layout_constraintStart_toStartOf="@id/homeBtnBackground"
        app:layout_constraintEnd_toEndOf="@id/homeBtnBackground" />

    <!-- Transparent clickable area for navigation -->
    <ImageButton
        android:id="@+id/homeBtn"
        android:layout_width="226dp"
        android:layout_height="64dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/homeBtnBackground"
        app:layout_constraintBottom_toBottomOf="@id/homeBtnBackground"
        app:layout_constraintStart_toStartOf="@id/homeBtnBackground"
        app:layout_constraintEnd_toEndOf="@id/homeBtnBackground" />

</androidx.constraintlayout.widget.ConstraintLayout>
