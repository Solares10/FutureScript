<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECD9DC">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#F2BBC4"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Button -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="BACK"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="@font/noticiatext_bold"
            android:background="@drawable/back_button_border"
            android:paddingStart="24dp"
            android:paddingEnd="24dp" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_future_script"
            android:scaleType="fitEnd"
            android:adjustViewBounds="true" />

    </LinearLayout>

    <!-- Letter Metadata Card -->
    <LinearLayout
        android:id="@+id/metadataCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/metadata_card_background"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <!-- Date Sent -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sent on:"
                android:textSize="14sp"
                android:textColor="#9E8088"
                android:fontFamily="@font/noticiatext_bold" />

            <TextView
                android:id="@+id/dateSent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#9E8088"
                android:fontFamily="@font/noticiatext_regular"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Date to Receive -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deliver on:"
                android:textSize="14sp"
                android:textColor="#9E8088"
                android:fontFamily="@font/noticiatext_bold" />

            <TextView
                android:id="@+id/dateDeliver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#9E8088"
                android:fontFamily="@font/noticiatext_regular"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Letter Content Container -->
    <ScrollView
        android:id="@+id/letterScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/letter_content_background"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/metadataCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/actionButtons"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/letterContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/noticiatext_regular"
            android:lineSpacingExtra="4dp" />

    </ScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/actionButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp">

        <!-- Delete Button -->
        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="DELETE"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="@font/noticiatext_bold"
            android:background="@drawable/rounded_button"
            android:paddingStart="32dp"
            android:paddingEnd="32dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
