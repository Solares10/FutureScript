<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECD9DC">

    <!-- Pink envelope video animation -->
    <VideoView
        android:id="@+id/envelopeVideo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Message text that fades in after video -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/letterMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:textSize="20sp"
        android:textColor="#5A4A4A"
        android:gravity="center"
        android:padding="24dp"
        android:textStyle="italic"
        android:fontFamily="@font/noticiatext_regular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="A message from your future self ðŸ’Œ" />
</androidx.constraintlayout.widget.ConstraintLayout>
