<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:gravity="center_horizontal"
    android:padding="24dp" android:background="@color/fs_pink_bg"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView android:text="Create your account" android:textSize="28sp"
        android:textStyle="bold" android:textColor="@color/fs_ink"
        android:layout_marginBottom="16dp" android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText android:id="@+id/name" android:hint="Name"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <EditText android:id="@+id/email" android:hint="Email" android:inputType="textEmailAddress"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <EditText android:id="@+id/phone" android:hint="Phone number" android:inputType="phone"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signupBtn" android:text="SIGN UP"
        android:layout_marginTop="24dp" android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
