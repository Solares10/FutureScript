<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECD9DC"
    android:padding="16dp"
    tools:context=".ui.inbox.LettersListFragment">

    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Letters"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/noticiatext_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="28dp" />

    <ImageView
        android:id="@+id/envelopeImage"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:src="@drawable/envelope_logo"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@id/pageTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp" />

    <TextView
        android:id="@+id/startWritingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Writing"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/noticiatext_bold"
        app:layout_constraintTop_toBottomOf="@id/envelopeImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Create your future letters.\nClick the plus button to start."
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/noticiatext_regular"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/startWritingTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp" />

    <!-- Hidden Bottom Bar -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#F2BBC4"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/addButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="8dp">

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="BACK"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="@font/noticiatext_bold"
            android:backgroundTint="#79C6C5"
            android:paddingStart="24dp"
            android:paddingEnd="24dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_future_script"
            android:scaleType="fitEnd"
            android:adjustViewBounds="true" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Start Writing"
        android:src="@android:drawable/ic_input_add"
        app:tint="#9E8088"
        app:backgroundTint="#FFFFFF"
        app:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
